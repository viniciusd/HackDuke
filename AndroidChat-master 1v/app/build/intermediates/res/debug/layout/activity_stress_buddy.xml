<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.firebase.androidchat.StressBuddy"
    android:background="@drawable/testbg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="I want"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some Help..."
        android:id="@+id/button"
        android:onClick="someHelpChat"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Help!"
        android:id="@+id/button2"
        android:onClick="toHelpChat"
        android:layout_marginBottom="110dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:id="@+id/imageButton"
        android:onClick="someHelpChat"
        android:src="@drawable/bt2"
        android:background="@drawable/bt2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:id="@+id/imageButton2"
        android:onClick="toHelpChat"
        android:background="@drawable/bt1"
        android:layout_alignTop="@+id/button2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
